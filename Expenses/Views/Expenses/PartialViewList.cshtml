@model IEnumerable<Expenses.Data.Models.Expenses>
@{  Layout = null;
    ViewBag.Title = "Home Page";
}
<div class="row">
    <table id="data-table-row-grouping" class="display" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Description</th>
                <th>Date</th>
                <th>Amount</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr id="@item.Id">
                    <td>@item.Description</td>
                    <td>@item.Date.ToShortDateString()</td>
                    <td style="text-align:right">@String.Format("{0:C0} ", @item.Amount)</td>
                    <td style="text-align:right">
                        <a href="@Url.Action("Edit", "Expenses" , new { Id=@item.Id })"><i class="Small material-icons">mode_edit</i></a>
                        <a class="delete" onclick="document.getElementById('md1_YesBtn').setAttribute('DeleteId', @item.Id);" href="#Confirm" data-href="@Url.Action("Delete", "Expenses" , new { Id=@item.Id })"><i class="Small material-icons">delete</i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div id="Confirm" class="modal light-blue" style="width:20%">
    <h4>Delete</h4>
    <div class="modal-content" style="background-color:white">
        <p>Are you sure to Delete?</p>
    </div>
    <div class="modal-footer orange">
        <a href="#" class="waves-effect waves-green btn-flat" id="md1_YesBtn">Yes</a>
        <a href="#" class="waves-effect waves-red btn-flat" onclick="$('.modal').modal('close');">Cancel</a>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#data-table-row-grouping').DataTable({
            columnDefs: [{ type: 'currency', targets: 2 }],
            "createdRow": function (row, data, index) {
            }
        });
        $('#md1_YesBtn').click(function () {
            var resourceUrl = '@Url.Action("Delete", "Expenses", new { area = "" })';
            $('#Confirm').modal('close');
            window.location = resourceUrl + "/" + $(this).attr("DeleteId");
        });
});
</script>


